{% extends "SiwappCoreBundle::base.html.twig" %}
{% trans_default_domain 'SiwappUserBundle' %}

{% block searchform_container %}{% endblock %}

{% block actionlink %}
<a href="{{ path('user_add') }}" class="btn btn-default btn-primary">
  <span class="glyphicon glyphicon-plus"></span>
  {% trans %}menu.user_add{% endtrans %}
</a>
{% endblock %}

{% block body %}

  <article class="invoice-like">

    <header id="invoice-like-title" class="clearfix">
      <h2>{% trans %}form.user{% endtrans %}</h2>
    </header>

    {{ form_start(form, {'attr': {'class': 'form-stacked' } }) }}

      {{ form_errors(form) }}

      <div class="row">
        <div class="col-md-6 clearfix">
          {{ form_row(form.username) }}
        </div>
        
        <div class="col-md-6 clearfix">
          <div class="form-group">
            {{ form_label(form.email) }}
            <div class="input-group">
              <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
              {{ form_widget(form.email) }}
            </div>
            {{ form_errors(form.email) }}
          </div>
        </div>
        
        <div class="col-md-6 clearfix">
          {{ form_row(form.roles) }}
        </div>
        
      </div>
      
      <div class="row">
      	<div class="col-md-6 clearfix">
          {{ form_row(form.plainPassword) }}
        </div>
      </div>

      

      {{ form_rest(form) }}

      <div class="form-actions">
        <input type="submit" class="btn btn-default btn-primary" name="save" value="{% trans %}form.submit{% endtrans %}">
        <div class="float-right">
          {% if entity.id %}
          <a class="btn btn-default btn-danger" href="{{ path('user_delete', {'id': entity.id}) }}" data-confirm="{% trans %}form.submit_delete_confirm{% endtrans %}">{% trans %}form.submit_delete{% endtrans %}</a>
          {% endif %}
        </div>
      </div>
    {{ form_end(form) }}

  </article>

{% endblock %}
