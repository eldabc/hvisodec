{% trans_default_domain 'SiwappRecurringInvoiceBundle' %}
{{ form_start(form, {'attr': {'class': 'search form-inline'}}) }}

  <fieldset>

    {{ form_row(form.terms) }}
    {{ form_row(form.status) }}
    {{ form_row(form.customer) }}
    {{ form_row(form.series) }}

    <div class="form-group float-right btn-toolbar">
      <div class="btn-group">
        <button id="search-submit" type="submit" class="btn btn-default btn-primary">{% trans %}search.submit{% endtrans %}</button>
      </div>
      <div class="btn-group">
        <a id="search-reset" href="{{ path('recurring_index') }}" class="btn btn-default btn-warning">{% trans %}search.reset{% endtrans %}</a>
      </div>
    </div>

  </fieldset>

{{ form_end(form) }}
